<%- include ('partials/head.ejs') %>
<%- include ('partials/homenavbar.ejs') %>
        
<body>
    
    <div class="container">
        <h1 class="text-center mt-5">Home</h1>
        <% articles.forEach(article => { %>
            <div class="card mb-3">
                <div class="card-header">
                    <h3 class="card-title"><%= article.title %></h3>
                </div>
                <div class="card-body">
                    <p><%- article.body.substring(0, 200) %>...</p>
                </div>
                <div class="card-footer">
                    <p class="card-text"><small class="text-muted">Category: <%= article.category.title %></small></p>
                    
                    <a href="#" class="btn btn-primary">Read More</a>
                </div>
            </div>
        <% }); %>
    </div>

</body>


