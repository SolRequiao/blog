        <body>

            <div class="container text-center mt-5">
                <div class="card">
                    <div class="card-header">
                        <h2>Are you sure about delete this Category: <span>
                                <%= category.title %>
                            </span>
                        </h2>
                        <% if (msgError) { %>
                            <div class="alert alert-danger" role="alert">
                                <p>
                                    <%= msgError %>
                                </p>
                            </div>
                            <% } %>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/category/delete" class="form-control">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button type="submit" class="btn btn-danger">Confirm Delete</button>
                            <a href="/admin/categories/0" class="btn btn-secondary">Back</a>
                        </form>
                    </div>
                </div>
            </div>

        </body>

